.endfor
	${INSTALL_SCRIPT} ${WRKSRC}/misc/*.pl ${WRKSRC}/misc/plot-bamcheck \
		${DESTDIR}${SAMPREFIX}/bin
	${INSTALL_SCRIPT} ${WRKSRC}/misc/*.py ${DESTDIR}${SAMPREFIX}/bin
