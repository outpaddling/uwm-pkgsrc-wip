usage()
{
    printf "Usage: $0 pkg\n"
    exit 1
}


##########################################################################
#   Main
##########################################################################

if [ $# != 1 ]; then
    usage
fi

pkg=$1
diff -ruN --exclude CVS ../wip/$pkg $pkg
